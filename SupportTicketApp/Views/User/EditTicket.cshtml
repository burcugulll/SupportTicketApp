@model SupportTicketApp.Models.TicketInfoTab

<h1>Bilet Düzenle</h1>

@if (ViewBag.CanEdit == true)
{
    <form asp-action="EditTicket" method="post">
        <input type="hidden" asp-for="TicketId" />
        <div class="form-group">
            <label for="Title">Başlık</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>
        <div class="form-group">
            <label for="Description">Açıklama</label>
            <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label for="Urgency">Aciliyet</label>
            <select class="form-control" id="Urgency" name="Urgency">
                <option value="0">Düşük</option>
                <option value="1">Orta</option>
                <option value="2">Yüksek</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
}
else
{
    <p>Bu bilet üzerinde işlem yapma yetkiniz yok.</p>
}
