@model IEnumerable<SupportTicketApp.Models.TicketInfoTab>

<div class="container">
    <h2>Atanmış Biletler</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="UpdateTickets" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th><input type="checkbox" id="select-all" /></th>
                    <th>Bilet Başlığı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>Durum</th>
                    <th>Aksiyonlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="SelectedTickets" value="@ticket.TicketId" /></td>
                        <td>@ticket.Title</td>
                        <td>@ticket.CreatedDate.ToString("dd/MM/yyyy")</td>
                        <td>@(ticket.IsCompleted ? "Tamamlandı" : "Devam Ediyor")</td>
                        <td>
                            <a asp-action="TicketDetails" asp-route-id="@ticket.TicketId" class="btn btn-info">Detay</a>
                            <a asp-action="DownloadPdf" asp-route-id="@ticket.TicketId" class="btn btn-secondary">PDF İndir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" name="action" value="complete" class="btn btn-success">Seçili Biletleri Tamamla</button>
        <button type="submit" name="action" value="delete" class="btn btn-danger">Seçili Biletleri Sil</button>
    </form>
</div>

<script>
    document.getElementById("select-all").addEventListener("change", function (e) {
        const checkboxes = document.querySelectorAll('input[name="SelectedTickets"]');
        checkboxes.forEach(cb => cb.checked = e.target.checked);
    });
</script>
