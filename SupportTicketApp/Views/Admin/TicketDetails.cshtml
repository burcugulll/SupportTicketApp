    </div>
    <!-- Personel Ata -->
    <div class="assign-personnel">
        <h3>Personel Ata</h3>
        <form asp-action="AssignUsersToTicket" method="post">
            <input type="hidden" name="ticketId" value="@Model.TicketId" />
            <label for="userSelect">Personel Ata:</label>
            <select id="Users" name="UserId" class="form-select" multiple>
                @if (ViewBag.Users != null)
                {
                    foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.UserId">@user.Name</option>
                    }
                }
                else
                {
                    <option value="">Kullanıcı bulunamadı</option>
                }
            </select>

            <button type="submit" class="btn btn-primary mt-2">Ata</button>
        </form>
    </div>
    <!-- İşlemler ve Butonlar -->
    <div class="btn-group mt-4 d-flex justify-content-center" role="group">
        <a asp-controller="Admin" asp-action="AllTickets" class="btn btn-primary btn-lg mx-2">Tüm Biletler</a>

        <form asp-action="DeleteTicket" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.TicketId" />
            <button type="submit" class="btn btn-danger btn-lg mx-2">Bileti Sil</button>
        </form>

        <form asp-action="UpdateTicketStatus" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.TicketId" />
            <button type="submit" class="btn btn-warning btn-lg mx-2">Durumu Güncelle</button>
        </form>
        <a asp-action="ExportToPdf" asp-route-ticketId="@Model.TicketId" class="btn btn-secondary">PDF İndir</a>
