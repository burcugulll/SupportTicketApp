@model SupportTicketApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-4">
        @TempData["SuccessMessage"]
    </div>
}
<style>
    .background-image {
        background-image: url('/images/ticket-background.jpg?v=2');
        background-size: cover; 
        background-position: center; 
        background-attachment: fixed; 
        background-repeat: no-repeat; 
        min-height: 100vh; 
        width: 100%; 
        padding: 0; 
        margin: 0; 
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.8); 
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
        width: 100%; 
        max-width: 800px; 
        margin: 0 auto; 
    }
</style>

<div class="background-image d-flex align-items-center justify-content-center">
    <div class="container form-container">
<h2 class="text-center">@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <div class="alert alert-warning text-center">
        @ViewBag.Message
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">          
                <div class="card-body">
                    <form asp-action="Login" method="post">
                                <div class="form-group">
                                    <label for="UsernameOrEmail">Kullanıcı Adı veya E-posta:</label>
                                    <input asp-for="UsernameOrEmail" type="text" id="UsernameOrEmail" name="UsernameOrEmail" class="form-control" />
                                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                </div>
                        <div class="form-group mt-3">
                            <label for="Password">Şifre:</label>
                            <input asp-for="Password" type="password" id="Password" name="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Hesabınız yok mu? <a asp-action="Register">Kayıt Olun</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}