@model SupportTicketApp.Models.TicketInfoTab

@{
    ViewData["Title"] = "Bilet Detayları";
}

<div class="container">
    <h2>Bilet Detayları</h2>

    <!-- Bilet Bilgileri -->
    <div class="ticket-details">
        <table class="table table-bordered">
            <tr>
                <th>Başlık</th>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <th>Durum</th>
                <td>@(Model.Status ? "Aktif" : "Pasif")</td>
            </tr>
            <tr>
                <th>Öncelik</th>
                <td>@Model.Urgency</td>
            </tr>
            <tr>
                <th>Açıklama</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Oluşturan Kullanıcı</th>
                <td>@Model.UserTab?.UserName ?? "Atanmamış"</td>
            </tr>
            <tr>
                <th>Oluşturulma Tarihi</th>
                <td>@Model.CreatedDate.ToShortDateString()</td>
            </tr>
        </table>
    </div>

    <!-- Yorumlar Bölümü -->
    <div class="comments-section">
        <h3>Yorumlar</h3>
        @if (Model.Comments != null && Model.Comments.Any())
        {
            foreach (var comment in Model.Comments)
            {
                <div class="comment">
                    <strong>@comment.Title</strong>
                    <p>@comment.Description</p>
                    <small>@comment.CreatedDate.ToShortDateString()</small>
                </div>
            }
        }
        else
        {
            <p>Yorum bulunamadı.</p>
        }


