@model IEnumerable<SupportTicketApp.Models.TicketInfoTab>

<h2>Devam Eden Biletler</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Durum</th>
            <th>Öncelik</th>
            <th>Oluşturan Kullanıcı</th>
            <th>Oluşturulma Tarihi</th>
            <th>Resim</th>
            <th>Tamamlanma Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@(ticket.Status ? "Aktif" : "Pasif")</td>
                <td>@ticket.Urgency</td>
                <td>@ticket.UserTab?.UserName ?? "Atanmamış"</td>
                <td>@ticket.CreatedDate.ToShortDateString()</td>
                <td>
                    @if (ticket.TicketImage != null)
                    {
                        <img src="@ticket.TicketImage.ImageUrl" alt="Resim" style="width: 50px;" />
                    }
                    else
                    {
                        <span>Resim yok</span>
                    }
                </td>
                <td>
                    @if (ticket.IsCompleted)
                    {
                        <span class="text-success">Tamamlandı</span>
                    }
                    else
                    {
                        <span class="text-warning">Devam Ediyor</span>
                    }
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="TicketDetails" asp-route-ticketId="@ticket.TicketId" class="btn btn-info">Detay</a>
                    <a asp-controller="Admin" asp-action="DeleteTicket" asp-route-ticketId="@ticket.TicketId" class="btn btn-danger">Bilet Sil</a>
                    <form asp-action="CompleteTicket" method="post" style="display:inline;">
                        <input type="hidden" name="ticketId" value="@ticket.TicketId" />
                        <button type="submit" class="btn btn-success">Tamamlandı</button>
                    </form>
                    @* <form asp-action="DeleteTicket" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@ticket.TicketId" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form> *@
                </td>
            </tr>
        }
    </tbody>
</table>
