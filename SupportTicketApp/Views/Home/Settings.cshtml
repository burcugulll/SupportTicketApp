@model SupportTicketApp.Models.UserTab

@{
    ViewData["Title"] = "Profil Ayarları";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center bg-info text-white">
            <h3><i class="fas fa-user-circle"></i> Profil Ayarları</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.Message as string))
            {
                <div class="alert alert-info">
                    @ViewBag.Message
                </div>
            }

            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- Ad Soyad -->
                    <div class="col-md-6 mb-3">
                        <label for="Name">Ad Soyad</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                    </div>

                    <!-- E-posta -->
                    <div class="col-md-6 mb-3">
                        <label for="Email">E-posta</label>
                        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                    </div>
                </div>

                <!-- Şifre -->
                <div class="form-group mt-3">
                    <label for="Password">Şifre</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Yeni şifre girin (isteğe bağlı)" />
                </div>

                <!-- Profil Fotoğrafı -->
                <div class="form-group mt-3">
                    <label for="ProfilePhoto">Profil Fotoğrafı</label>
                    <input type="file" class="form-control" id="ProfilePhoto" name="ProfilePhoto" />
                </div>

                <!-- Güncelleme Butonu -->
                <button type="submit" class="btn btn-success mt-4 w-100">Güncelle</button>
            </form>
        </div>
    </div>
</div>

<!-- Font Awesome CDN for icons (if needed for the user icon) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
