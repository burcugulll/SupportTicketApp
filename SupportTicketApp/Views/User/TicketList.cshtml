@model List<SupportTicketApp.Models.TicketInfoTab>

@{
    ViewData["Title"] = "Destek Biletleri";
}

<h1>Destek Biletleri</h1>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Aciliyet</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Description</td>
                <td>@ticket.Urgency</td>
                <td>@ticket.CreatedDate</td>
                <td>
                    <a href="@Url.Action("AddComment", "User", new { ticketId = ticket.TicketId })">Yorum Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateTicket", "User")" class="btn btn-primary">Yeni Bilet Oluştur</a>
