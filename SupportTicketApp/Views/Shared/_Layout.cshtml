@using SupportTicketApp.Models
@using SupportTicketApp.Enums
@inject SupportTicketDbContext _context

@{
    var userId = Context.User?.Identity?.Name; // Kullanıcı adı (userName) üzerinden sorgulama yapıyoruz
    var user = _context.UserTabs
                   .FirstOrDefault(u => u.UserName == userId || u.Email == userId);
    var userType = user != null ? user.UserType : (UserType?)null; // Kullanıcıyı bulduysak türünü alıyoruz, bulamazsak null

}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <!-- Yönetici Navbar'ı -->
    @if (userType == UserType.Yonetici)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Yönetici Paneli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Admin")">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UserManagement", "Admin")">Kullanıcı Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AllTickets", "Admin")">Tüm Biletler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("OngoingTickets", "Admin")">Devam Eden Biletler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UnassignedTickets", "Admin")">Atanmamış Biletler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Account")">Çıkış</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }
    <!-- Çalışan Navbar'ı -->
    else if (userType == UserType.Calisan)
    {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Çalışan Paneli</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("AssignedTickets", "Employee")">Çalışana Atanmış Biletler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("TicketDetails", "Employee")">Bilet Detayı</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Account")">Çıkış</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }
    <!-- Son Kullanıcı Navbar'ı -->
    else if (userType == UserType.SonKullanici)
    {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Son Kullanıcı Paneli</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("ViewTickets", "User")">Destek Biletleri Listesi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("CreateTicket", "User")">Bilet Ekle</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("TicketDetails", "User")">Bilet Detayı</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Account")">Çıkış</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }
    <!-- Giriş Yapmamış Kullanıcı Navbar'ı -->
    else
    {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Destek Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Login", "Account")">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Register", "Account")">Kayıt Ol</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }

    <!-- Sayfanın ana içeriği -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SupportTicketApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript ve jQuery Bağlantıları -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
