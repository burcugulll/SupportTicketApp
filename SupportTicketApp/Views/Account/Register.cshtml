@model SupportTicketApp.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}
<style>
    .background-image {
        background-image: url('/images/ticket-background.jpg?v=2');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        min-height: 100vh; /* Tüm ekranı kaplar */
        width: 100%;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.8); /* Beyaz arka plan, şeffaf */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Hafif gölge efekti */
    }
</style>

<div class="background-image d-flex align-items-center justify-content-center">
    <div class="container form-container">
        <h2 class="text-center">@ViewData["Title"]</h2>

        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="Register" id="registerForm">
                    <div class="form-group">
                        <label for="Email">E-posta*</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="UserName">Kullanıcı Adı*</label>
                        <input asp-for="UserName" class="form-control" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password">Şifre*</label>
                        <input asp-for="Password" type="password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Şifreyi Onayla*</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Adı Soyadı*</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p>Hesabınız var mı? <a asp-action="Login">Giriş Yapın</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
