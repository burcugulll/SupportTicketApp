@model SupportTicketApp.Models.TicketInfoCommentTab

@{
    ViewData["Title"] = "Yorum Ekle";
}

<h1>Yorum Ekle</h1>

<form asp-action="AddComment" method="post">
    <input type="hidden" name="ticketId" value="@ViewBag.TicketId" />
    <div class="form-group">
        <label for="Description">Yorum</label>
        <textarea class="form-control" id="Description" name="Description" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Yorum Ekle</button>
</form>
